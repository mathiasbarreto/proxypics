<!-- search form -->
<%= form_tag request.path, class: 'mt-3 container', method: :get do %>
<div class = 'd-flex'>
  <%= date_field_tag :start_date,
      params[:start_date],
      class: "form-control" %>
      <%= date_field_tag :end_date,
      params[:end_date],
      class: "form-control" %>
  <%= text_field_tag :address,
    params[:address],
    class: "form-control",
    placeholder: "Find order by date, address or status"%>
  <%= submit_tag "Search", class: "btn btn-primary ml-2" %>
</div>
<% end %>
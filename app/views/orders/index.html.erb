<h1>Orders</h1>
<%= render 'filter' %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Date of creation</th>
      <th scope="col">Address</th>
      <th scope="col">Status</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.created_at.strftime("%m/%d/%Y") %></td>
        <td><%= order.address %></td>
        <td><%= order.status %></td>
        <% if order.status == 'pending' %>
          <td><%= link_to 'Submit Photos', edit_order_path(order) %> </td>
        <% end %>
        <td><%= link_to 'See Details', order%> </td>
        
      </tr>
    <% end %>
  </tbody>
</table>
</br>
<button type="button" class="btn btn-primary btn-sm"><td><%= link_to 'New Order', new_order_path %> </td></button>
</br>
</br>
<%= paginate @orders %>


<h1>Orders</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Date of creation</th>
      <th scope="col">Address</th>
      <th scope="col">Status</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.created_at %></td>
        <td><%= order.address %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'See Details', order%> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<button type="button" class="btn btn-primary btn-sm"><td><%= link_to 'New Order', new_order_path %> </td></button>


